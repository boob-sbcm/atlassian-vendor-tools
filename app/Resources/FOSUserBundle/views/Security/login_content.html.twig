{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="login-wrap">
        <div class="col-md-4 col-md-offset-4">
            <div class="row">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path("fos_user_security_check") }}" method="post" class="aui">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}

                    <div class="field-group">
                        <label for="username">Username<span class="aui-icon icon-required">(required)</span></label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}"
                               required="required"
                               class="text medium-field"/>
                    </div>

                    <div class="field-group">
                        <label for="password">Password<span class="aui-icon icon-required">(required)</span></label>
                        <input type="password" id="password" name="_password" required="required"
                               class="form-control"/>
                    </div>

                    <div class="checkbox">
                        <label for="remember_me"><input type="checkbox" id="remember_me" name="_remember_me"
                                                        value="on"/>
                            {{ 'security.login.remember_me'|trans }}</label>
                    </div>

                    <button type="submit" id="_submit" name="_submit"
                            class="btn btn-info col-md-3 pull-left"><i class="glyphicon glyphicon-log-in"></i> Login</button>
                </form>
                <a href="{{ path('fos_user_registration_register') }}" class="btn btn-success col-md-3 pull-right"><i class="glyphicon glyphicon-flash"></i> Sign
                    up</a>
            </div>
        </div>
    </div>
</div>
