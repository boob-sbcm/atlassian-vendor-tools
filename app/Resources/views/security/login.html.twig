{% import ":other:macro.html.twig" as macro %}

{% extends 'base.html.twig' %}

{% block mainNav %}{% endblock %}

{% block auiPanelContent %}

    <div class="avt-login-wrap">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path("login") }}" method="post" class="aui">

            <div class="field-group">
                <label for="username">Username<span class="aui-icon icon-required">(required)</span></label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
                       class="text medium-field"/>
            </div>

            <div class="field-group">
                <label for="password">Password<span class="aui-icon icon-required">(required)</span></label>
                <input type="password" id="password" name="_password" required="required" class="text medium-field"/>
            </div>
            <fieldset class="group">
                <div class="checkbox">
                    <label for="remember_me"><input type="checkbox" id="remember_me" name="_remember_me"
                                                    class="checkbox" value="on"/>Stay logged in</label>
                </div>
            </fieldset>
            <div class="buttons-container">
                <input class="button submit" type="submit" value="Login">
            </div>
        </form>
    </div>
{% endblock %}